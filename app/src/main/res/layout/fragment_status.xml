<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu.StatusFragment"
    android:background="@color/goodgray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/statusprofileicon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_baseline_self_improvement_24"/>

            <ImageView
                android:id="@+id/statusaddicon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="center"
                android:layout_alignBottom="@+id/statusprofileicon"
                android:layout_alignEnd="@+id/statusprofileicon"
                android:src="@drawable/addstatusbtn"
                app:tint="@color/teal_200" />
        </RelativeLayout>

<LinearLayout
android:layout_width="0dp"
android:layout_height="wrap_content"
android:layout_weight="1"
android:layout_gravity="center_vertical"
android:layout_marginStart="10dp"
android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/statustextview"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="My Status"/>

</LinearLayout>
        <TextView
            android:id="@+id/addtextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap to add status update" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>